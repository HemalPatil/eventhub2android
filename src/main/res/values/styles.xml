<resources>
    
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarStyle">@style/AppTheme.ToolbarStyle</item>
        <item name="actionBarTheme">@style/AppTheme.ToolbarTheme</item>
    </style>

    <style name="AppTheme.ToolbarStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:titleTextStyle">@style/AppTheme.ToolbarStyle.TitleTextStyle</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="AppTheme.ToolbarStyle.TitleTextStyle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.ToolbarTheme">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
    </style>
    
</resources>